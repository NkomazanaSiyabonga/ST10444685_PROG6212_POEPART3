@model List<ProgrammingPOE.Models.Claim>
@{
    ViewData["Title"] = "All Claims";
}

<h2>All Claims</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>No claims have been submitted yet.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Submission Date</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.LecturerName</td>
                        <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.HourlyRate</td>
                        <td>R @claim.TotalAmount</td>
                        <td>
                            @switch (claim.Status)
                            {
                                case ProgrammingPOE.Models.ClaimStatus.Submitted:
                                    <span class="badge bg-warning">Pending</span>
                                    break;
                                case ProgrammingPOE.Models.ClaimStatus.Verified:
                                    <span class="badge bg-info">Verified</span>
                                    break;
                                case ProgrammingPOE.Models.ClaimStatus.Approved:
                                    <span class="badge bg-success">Approved</span>
                                    break;
                                case ProgrammingPOE.Models.ClaimStatus.RejectedByCoordinator:
                                    <span class="badge bg-danger">Rejected by Coordinator</span>
                                    break;
                                case ProgrammingPOE.Models.ClaimStatus.RejectedByHR:
                                    <span class="badge bg-danger">Rejected by HR</span>
                                    break;
                                case ProgrammingPOE.Models.ClaimStatus.ReturnedForCorrection:
                                    <span class="badge bg-warning">Correction Required</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">Unknown</span>
                                    break;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Back to Home</a>
</div>
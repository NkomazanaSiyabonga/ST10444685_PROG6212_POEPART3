@{
    ViewData["Title"] = "Dashboard";
    var userId = Context.Session.GetString("UserId");
    var userName = Context.Session.GetString("UserName");
    var userRole = Context.Session.GetString("UserRole");
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Welcome, @userName!</h1>
                <span class="badge bg-primary fs-6">@userRole</span>
            </div>
            <p class="lead">Manage your claims and activities from here</p>
        </div>
    </div>

    <!-- Automated Notifications Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-bell me-2"></i>Notifications</h5>
                </div>
                <div class="card-body">
                    <div id="notifications">
                        <div class="alert alert-warning">
                            <i class="fas fa-clock me-2"></i>
                            <strong>System Update:</strong> New automation features have been deployed.
                        </div>
                        @if (userRole == "Lecturer")
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-lightbulb me-2"></i>
                                <strong>Tip:</strong> Use the auto-calculation feature for faster claim submission.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (userRole == "Lecturer")
    {
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-calculator fa-3x mb-3"></i>
                        <h5>Auto-Submit Claim</h5>
                        <p>Smart calculation with automatic validation</p>
                        <a href="@Url.Action("Create", "Claims")" class="btn btn-light">Submit Claim</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x mb-3"></i>
                        <h5>Claim Analytics</h5>
                        <p>View your submission statistics and trends</p>
                        <a href="@Url.Action("Index", "Claims")" class="btn btn-light">View Analytics</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-history fa-3x mb-3"></i>
                        <h5>Quick Actions</h5>
                        <p>Recent claims and quick resubmission</p>
                        <button class="btn btn-light" onclick="showQuickActions()">Quick Actions</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (userRole == "Coordinator")
    {
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <i class="fas fa-bolt fa-3x mb-3"></i>
                        <h5>Automated Verification</h5>
                        <p>Smart validation and bulk approval tools</p>
                        <a href="@Url.Action("Index", "Coordinator")" class="btn btn-dark">Review Claims</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card bg-secondary text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-pie fa-3x mb-3"></i>
                        <h5>Verification Analytics</h5>
                        <p>Track approval rates and processing times</p>
                        <button class="btn btn-light" onclick="showCoordinatorStats()">View Stats</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (userRole == "HRManager")
    {
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-robot fa-3x mb-3"></i>
                        <h5>Auto-Approval</h5>
                        <p>AI-powered claim validation system</p>
                        <a href="@Url.Action("Index", "HRManager")" class="btn btn-light">Manage Claims</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-users-cog fa-3x mb-3"></i>
                        <h5>User Management</h5>
                        <p>Automated user onboarding and management</p>
                        <a href="@Url.Action("UserManagement", "HRManager")" class="btn btn-light">Manage Users</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-file-export fa-3x mb-3"></i>
                        <h5>Smart Reports</h5>
                        <p>Automated report generation and export</p>
                        <a href="@Url.Action("Reports", "HRManager")" class="btn btn-light">Generate Reports</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function showQuickActions() {
            alert('Quick Actions:\n• Resubmit last claim\n• Duplicate successful claims\n• View submission templates');
        }

        function showCoordinatorStats() {
            alert('Coordinator Statistics:\n• Average processing time: 2.3 days\n• Approval rate: 87%\n• Common rejection reasons displayed');
        }

        // Auto-refresh notifications
        setInterval(() => {
            // In a real app, this would fetch new notifications from the server
            console.log('Checking for new notifications...');
        }, 30000);
    </script>
}